<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.yuu.socialinnovationcamp.fragment.ContactFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name:"
                android:textColor="#009688"
                android:textSize="16sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/icon_call" />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/txt_title_name"
                android:text="Lê Trọng Dũng"
                android:textColor="#009688"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_title_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_name"
                android:layout_marginTop="10dp"
                android:text="Title:"
                android:textColor="#009688"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_phone_numer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/txt_title_name"
                android:text="PHD"
                android:textColor="#009688"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txt_title_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_title_phone_number"
                android:layout_marginTop="10dp"
                android:text="Rating:"
                android:textColor="#009688"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txt_phone_numer"
                android:layout_alignTop="@+id/txt_title_adress"
                android:layout_marginTop="4dp"
                android:rating="4.5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
